<syncfusion:ChromelessWindow
    x:Class="A_MappingTrabalho.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:properties="clr-namespace:A_MappingTrabalho.Properties"
    xmlns:local="clr-namespace:A_MappingTrabalho.Views"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Style="{StaticResource CustomMetroWindow}"
    mc:Ignorable="d"
    MinWidth="500"
    MinHeight="350"
    Title="{x:Static properties:Resources.AppDisplayName}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnloadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <syncfusion:ChromelessWindow.LeftHeaderItemsSource>
        <local:MyObservableCollection>
            <Button
                Width="{Binding ElementName=hamburgerMenu, Path=CompactPaneLength}"
                AutomationProperties.Name="{x:Static properties:Resources.ShellGoBackButton}"
                ToolTip="{x:Static properties:Resources.ShellGoBackButton}"
                Command="{Binding GoBackCommand}">
                <TextBlock
                    Text="&#xE72B;"
                    FontSize="14"
                    FontFamily="Segoe MDL2 Assets"
                    AutomationProperties.Name="{x:Static properties:Resources.ShellGoBackButton}" />
            </Button>
        </local:MyObservableCollection>
    </syncfusion:ChromelessWindow.LeftHeaderItemsSource>

    <syncfusion:ChromelessWindow.Content>
        <syncfusion:SfNavigationDrawer x:Name="navigationDrawer" ExpandedModeThresholdWidth="256" ItemsSource="{Binding MenuItems}" DisplayMemberPath="Label" DisplayMode="Expanded" IconMemberPath="Path" SelectedItem="{Binding SelectedMenuItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontFamily="pack://application:,,,/Fonts/#Outfit" DrawerBackground="#FF432A2A">
            <syncfusion:SfNavigationDrawer.ContentView>
                <Frame
                    x:Name="shellFrame"
                    NavigationUIVisibility="Hidden"
                    Focusable="False" Margin="0,0,1,0" />



            </syncfusion:SfNavigationDrawer.ContentView>

            <syncfusion:SfNavigationDrawer.ToggleButtonContentTemplate>
                <DataTemplate>

                    <Label
                     Margin="0,20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="User"
                        Foreground="White"/>
                </DataTemplate>
            </syncfusion:SfNavigationDrawer.ToggleButtonContentTemplate>

            <syncfusion:SfNavigationDrawer.ToggleButtonIconTemplate>
                <DataTemplate>
                    <Label
                        Foreground="White"
                    Content="U"
                        Margin="2,5,0,0"
                    Width="59"
                    Height="59"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" FontSize="32"
                     />
                </DataTemplate>
            </syncfusion:SfNavigationDrawer.ToggleButtonIconTemplate>

        </syncfusion:SfNavigationDrawer>
    </syncfusion:ChromelessWindow.Content>
</syncfusion:ChromelessWindow>
