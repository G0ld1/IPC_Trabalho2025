<Page x:Class="A_MappingTrabalho.Views.LoginPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBox  Margin="0 5"/>
            <PasswordBox Margin="0 5"/>
            <Button Content="Login" Command="{Binding LoginCommand}" Margin="0 10"/>
            <TextBlock Text="Ainda não tens conta?" HorizontalAlignment="Center" />
            <Button Content="Registar" Command="{Binding NavigateToRegisterCommand}" />
        </StackPanel>
    </Grid>
</Page>
