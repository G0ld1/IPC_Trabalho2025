<Page x:Class="A_Mapping2.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A_Mapping2.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" />

            <TextBox x:Name="UsernameTextBox"  Margin="0,0,0,10" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" />
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" />

            <Button Content="Register" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Page>
