<Page x:Class="A_Mapping2.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A_Mapping2.Views.Pages"
      xmlns:controls="clr-namespace:A_Mapping2.Views.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RegisterPage" >

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,20">
            <TextBlock Text="{DynamicResource Greeting}" 
                       FontFamily="Outfit" 
                       FontWeight="SemiBold" 
                       FontSize="48" 
                       Foreground="#FFF6EEF2"
                       TextAlignment="Center"/>
            <TextBlock Text="{DynamicResource GreetingTip}" 
                       FontFamily="Outfit" 
                       FontSize="38"
                       Foreground="#FFF6EEF2"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0" Width="367"/>
        </StackPanel>

        <!-- Formulário -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="449" MaxWidth="600" Margin="0,20,0,0">
            <TextBlock Text="{DynamicResource UsernameLabel}" FontFamily="Outfit" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Text="{Binding Username}" Height="50" FontSize="16" Margin="0,0,0,20" 
                     Background="#936D4137" BorderThickness="0" Padding="10"/>

            <TextBlock Text="{DynamicResource EmailLabel}" FontFamily="Outfit" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Email}" Height="50" FontSize="16" Margin="0,0,0,20" 
                     Background="#FF6D4137" BorderThickness="0" Padding="10"/>

            <TextBlock Text="{DynamicResource PasswordLabel}" FontFamily="Outfit" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="50" Margin="0,0,0,20" 
                         Background="#586D4137" BorderThickness="0" Padding="10"/>

            <TextBlock Text="{DynamicResource PassConfirmationLabel}" FontFamily="Outfit" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="50" Margin="0,0,0,30"
                         Background="#586D4137" BorderThickness="0" Padding="10"/>

            <Button Content="{DynamicResource RegisterButton}"
                    Click="RegisterButton_Click"
                    Width="200" Height="50"
                    FontSize="20"
                    Background="#FF743933"
                    FontFamily="Outfit"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="#586D4137"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" MouseDown="NavigateToLoginPage">
                <Run Text="{DynamicResource BackToLoginText}" FontFamily="Outfit" FontSize="16" TextDecorations="Underline"  Foreground="#F3D996" />
            </TextBlock>

            <controls:LanguageSelector />
        </StackPanel>
    </Grid>
</Page>