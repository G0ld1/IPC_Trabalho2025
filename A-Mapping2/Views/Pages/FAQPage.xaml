<!-- Views/Pages/FAQPage.xaml -->
<Page x:Class="A_Mapping2.Views.Pages.FAQPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:A_Mapping2.Views.Controls"
      Title="FAQ">
    <StackPanel Margin="20">
        <TextBlock Text="FAQ" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,20"/>
        <TextBlock Text="{DynamicResource Q1}" FontWeight="Bold" Foreground="White" FontSize="20" />
        <TextBlock Text="{DynamicResource R1}" FontWeight="Bold" Foreground="LightGray" FontSize="15" />
        <TextBlock Text="{DynamicResource Q2}" FontWeight="Bold" Foreground="White" FontSize="20" />
        <TextBlock Text="{DynamicResource R2}" FontWeight="Bold" Foreground="LightGray" FontSize="15" />
        <TextBlock Text="{DynamicResource Q3}" FontWeight="Bold" Foreground="White" FontSize="20" />
        <TextBlock Text="{DynamicResource R3}" FontWeight="Bold" Foreground="LightGray" FontSize="15" />

        

        <Button Content="Back"
        Width="80"
        Margin="0,100,0,20"
        Click="BackButton_Click"
            Height="40"
            Background="#FF743933"
            Foreground="White"
            FontFamily="Outfit"
            FontWeight="SemiBold" HorizontalAlignment="Left">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="#586D4137"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <controls:LanguageSelector Margin="0,100,0,50"/>

    </StackPanel>
</Page>