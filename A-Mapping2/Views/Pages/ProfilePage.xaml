<Page x:Class="A_Mapping2.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A_Mapping2.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ProfilePage">

    <Grid Margin="60"> 
        <TextBlock Text=" Perfil" FontFamily="Outfit" FontSize="52" FontWeight="Bold" Foreground="White" Margin="80,134,0,676" Height="87"/>
        <Image Source="/Assets/Images/Camera.png" Width="48" Height="48" Margin="1006,258,746,654"></Image>
    <StackPanel Margin="20,258,20,20" HorizontalAlignment="Center" >
            <Ellipse Height="200" Width="200" Fill="#FF626262">  </Ellipse>
            <TextBox x:Name="UsernameTextBox" Text="{Binding Username, Mode=TwoWay}" Margin="0,10"/>
            <TextBox x:Name="EmailTextBox" Text="{Binding Email, Mode=TwoWay}"></TextBox>
            <PasswordBox x:Name="PasswordBox" ></PasswordBox>
            <!-- Outros controles -->
    </StackPanel>
    </Grid>
    
</Page>
