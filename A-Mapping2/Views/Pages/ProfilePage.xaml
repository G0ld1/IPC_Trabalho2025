<Page x:Class="A_Mapping2.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:A_Mapping2.Views.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ProfilePage">

    <Grid Margin="60" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Conteúdo principal -->
        </Grid.RowDefinitions>      

        <TextBlock Text="{DynamicResource ProfileText}" FontFamily="Outfit" FontSize="52" FontWeight="Bold" Foreground="White" Margin="0,0,0,40" Grid.Row="0"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Foto -->
                <ColumnDefinition Width="2*"/>
                <!-- Campos -->
            </Grid.ColumnDefinitions>

            <!-- Lado esquerdo: Foto e ícone da câmara -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0">
                <Grid MouseLeftButtonUp="ProfileImage_Click" Cursor="Hand">
                    <Ellipse x:Name="ProfileEllipse" Height="200" Width="200">
                        <Ellipse.Fill>
                            <SolidColorBrush x:Name="ProfileFallbackBrush" Color="Gray"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Image Source="/Assets/Images/Camera.png"
           Width="48" Height="48"
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom"
           Margin="0,0,-48,152"/>
                </Grid>
            </StackPanel>

            <!-- Lado direito: Campos -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="40,0,0,0">
                <!-- Username -->
                <TextBlock Text="{DynamicResource UsernameLabel}" FontFamily="Outfit" FontWeight="Medium" Foreground="White" Margin="0,0,0,5"/>
                <TextBlock x:Name="UsernameTextBlock"  FontSize="16" FontFamily="Outfit" Foreground="White" Margin="0,0,0,20" Background="#5E6D4137"/>

                <!-- Email -->
                <TextBlock Text="{DynamicResource EmailLabel}" FontFamily="Outfit" FontWeight="Medium" Foreground="White" Margin="0,0,0,5"/>
                <TextBlock x:Name="EmailTextBlock"  FontSize="16" FontFamily="Outfit" Foreground="White" Margin="0,0,0,20" Background="#5E6D4137"/>

                <!-- Botão para mudar password -->
                <TextBlock Text="{DynamicResource PasswordLabel}" FontFamily="Outfit" FontWeight="Medium" Foreground="White" Margin="0,0,0,15"/>
                <Button Content="{DynamicResource ChangePassWord}"
            Click="ChangePassword_Click"
            Height="40"
            Width="200"
            Background="#FF743933"
            Foreground="White"
            FontFamily="Outfit"
            FontWeight="SemiBold" HorizontalAlignment="Left">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#586D4137"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>


                </Button>

                <Button Content="{DynamicResource SwitchAccount}"
    Click="Logout_Click"
    Height="40"
    Width="200"
    Margin="0,20,0,0"
    Background="#FF743933"
    Foreground="White"
    FontFamily="Outfit"
    FontWeight="SemiBold" HorizontalAlignment="Left">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="#586D4137"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="20">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>


                </Button>
                <Button Content="{DynamicResource GoBackButton}" FontFamily="Outfit" Click="BackButton_Click" Width="100" Height="50" Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#586D4137"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <controls:LanguageSelector />
            </StackPanel>
        </Grid>
    </Grid>
</Page>