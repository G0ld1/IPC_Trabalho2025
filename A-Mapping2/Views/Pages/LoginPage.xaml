<Page x:Class="A_Mapping2.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A_Mapping2.Views.Pages"
      xmlns:controls="clr-namespace:A_Mapping2.Views.Controls"
      KeyDown="Page_KeyDown"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="LoginPage">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,20">
            <TextBlock Text="Iniciar Sessão" 
                    FontFamily="Outfit" 
                    FontWeight="SemiBold" 
                    FontSize="48" 
                    Foreground="#FFF6EEF2"
                    TextAlignment="Center"/>
            <TextBlock Text="Faça Login para Continuar" 
                    FontFamily="Outfit" 
                    FontSize="38"
                    Foreground="#FFF6EEF2"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Margin="0,10,0,0" Width="484"/>
        </StackPanel>

        <!-- Formulário -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="449" MaxWidth="600" Margin="0,20,0,0">
            <TextBlock Text="Nome de Utilizador/Email" FontFamily="Outfit" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username}" Height="50" FontSize="16" Margin="0,0,0,20" 
                  Background="#936D4137" BorderThickness="0" Padding="10"/>

            <TextBlock Text="Palavra-Passe" FontFamily="Outfit" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="50" Margin="0,0,0,20" PasswordChanged="PasswordBox_PasswordChanged"
                      Background="#586D4137" BorderThickness="0" Padding="10"/>

            <Button Content="Login"
                 Command="{Binding LoginCommand}"
                 Width="200" Height="50"
                 FontSize="20"
                 Background="#FF743933"
                 FontFamily="Outfit"
                 FontWeight="SemiBold"
                 Foreground="White"
                 Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="#586D4137"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                         BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <TextBlock Text="{DynamicResource LoginLabel}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="{DynamicResource UsernameLabel}" FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
            <TextBox Text="{Binding Username}" Margin="0,10" Height="40" 
                                                            FontSize="16" 
                                                            VerticalContentAlignment="Center" 
                                                            HorizontalContentAlignment="Center"/>

            <TextBlock Text="{DynamicResource PasswordLabel}" FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0,10" Height="40" 
                         FontSize="16" 
                         VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Center"
                         />
            <TextBox Name="PasswordUnmask" Visibility="Hidden" Margin="0,10" Height="40" 
                        FontSize="16" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Center" />

            <TextBlock x:Name="ShowPassword" Text="👁" 
                       FontSize="16"
                       HorizontalAlignment="Right"
                       PreviewMouseDown="ShowPassword_PreviewMouseDown"
                       />

            <Button Content="{DynamicResource LoginButton}"
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding ElementName=PasswordBox, Path=Password}"
            Width="150" Height="30"
            HorizontalAlignment="Right"
            Margin="0,10,0,0" />

            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" MouseDown="NavigateToRegisterPage">
                <Run Text="{DynamicResource RegisterText}" TextDecorations="Underline" Foreground="Blue" />
            </TextBlock>
            <controls:LanguageSelector />
        </StackPanel>
    </Grid>
</Page>
